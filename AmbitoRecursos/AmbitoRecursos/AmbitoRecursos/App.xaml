<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AmbitoRecursos.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <ResourceDictionary>
            <Color x:Key="PageBack"> Chocolate </Color>
            <Color x:Key="HeadTextColor"> Aqua </Color>
            <Color x:Key="NormalTxtColor"> Orange</Color>
            <Color x:Key="LabelHead">Orange</Color>
            <Style  TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold"></Setter>
                <Setter Property="HorizontalOption" Value="Center"></Setter>
                <Setter Property="TextColor" Value="{StaticResource HeadTxtColor}"></Setter>



            </Style>
        </ResourceDictionary>

	</Application.Resources>
</Application>